pragma solidity 0.8.4;

import "hardhat/console.sol";

import "./interfaces/IReveal.sol";
import "./interfaces/IGalaxyFrens.sol";
import "erc721psi/contracts/extension/ERC721PsiBurnable.sol";

contract GalaxyFrensProStorage {
    address public constant galaxyFrensV1 = address(0xe92984e587805a94C1Cd45B6a8e7cBdDCd2e7C08);
    address public constant galaxyFrensLand = address(0x621069D03548e08aa430dc56af8C6dBCb4f68aFB);
}

contract GalaxyFrens is
    IGalaxyFrens,
    GalaxyFrensProStorage,
    ERC721PsiBurnable
{

    constructor(
    ) 
        ERC721Psi("GalaxyFrens", "GF")
    {

    }

    function reveal(uint256[] calldata _revealTokens)
        external
        override
    {
        uint256 quantity = _revealTokens.length;
        for (uint256 i; i < quantity; ) {

            IReveal(galaxyFrensV1).transferFrom(msg.sender, galaxyFrensLand, _revealTokens[i]);
            unchecked {
                i++;
            }
        }

        _safeMint(msg.sender, quantity);
    }

}